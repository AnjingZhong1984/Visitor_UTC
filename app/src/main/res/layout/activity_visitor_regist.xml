<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_visitor_regist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.fafa.visitor.VisitorRegistActivity">

    <ImageView android:layout_width="200dp" android:layout_height="100dp"
               android:src="@drawable/logo"/>
    <LinearLayout android:layout_width="840dp" android:layout_height="wrap_content"
                  android:layout_marginTop="80dp"
                  android:layout_marginLeft="100dp"
                  android:background="@drawable/registe_shape"
                  android:orientation="vertical">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:background="@drawable/registe_head_shape"
                  android:textColor="@color/colorWhite"
                  android:textSize="20sp"
                  android:paddingTop="20dp"
                  android:paddingLeft="40dp"
                  android:text="Please Fill Out fields below 请填写访客信息"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingTop="20dp"
                      android:paddingBottom="20dp"
                      android:paddingRight="40dp"
                      android:paddingLeft="50dp">
            <LinearLayout android:layout_width="350dp" android:layout_height="wrap_content"
                          android:layout_marginRight="20dp"
                          android:orientation="vertical">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:id="@+id/visitEnglishFirstNameDesc"
                          android:text="First name(英文名或拼音)"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:id="@+id/visitEnglishFirstName"
                          android:singleLine="true"
                          android:maxLines="1"
                          android:textSize="18sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:id="@+id/visitEnglishSurnameDesc"
                          android:text="Surname(英文姓)"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:id="@+id/visitEnglishSurname"
                          android:singleLine="true"
                          android:maxLines="1"
                          android:textSize="18sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:text="Surname in Chinese(中文姓)"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:id="@+id/visitChineseSurname"
                          android:singleLine="true"
                          android:maxLines="1"
                          android:textSize="18sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:text="First name in Chinese(中文名)"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:id="@+id/visitChineseFirstName"
                          android:singleLine="true"
                          android:maxLines="1"
                          android:textSize="18sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:id="@+id/visitMobileDesc"
                          android:text="Mobile(电话号码)"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:id="@+id/visitMobile"
                          android:singleLine="true"
                          android:maxLines="1"
                          android:textSize="18sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:id="@+id/visitEmailDesc"
                          android:text="Email(邮箱)"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:id="@+id/visitEmail"
                          android:singleLine="true"
                          android:maxLines="1"
                          android:textSize="18sp"/>
            </LinearLayout>
            <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#A0A0A0"/>
            <LinearLayout android:layout_width="350dp" android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:orientation="vertical">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:id="@+id/visitNationalityDesc"
                          android:text="Nationality(国籍)"/>
                <Spinner android:layout_width="match_parent" android:layout_height="wrap_content"
                         android:entries="@array/nationality"
                         android:layout_marginStart="-15dp"
                         android:theme="@style/myDropTheme"
                         android:id="@+id/visitNationality"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:id="@+id/visitCompanyDesc"
                          android:text="Company(公司名称)"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:id="@+id/visitCompany"
                          android:singleLine="true"
                          android:maxLines="1"
                          android:textSize="18sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:text="Business"/>
                <Spinner android:layout_width="match_parent" android:layout_height="wrap_content"
                         android:entries="@array/business"
                         android:layout_marginStart="-15dp"
                         android:theme="@style/myDropTheme"
                         android:id="@+id/visitBusiness"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:text="Location"/>
                <Spinner android:layout_width="match_parent" android:layout_height="wrap_content"
                         android:entries="@array/location"
                         android:layout_marginStart="-15dp"
                         android:theme="@style/myDropTheme"
                         android:id="@+id/visitLocation"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:id="@+id/namelDesc"
                          android:text="Employee Name(受访人的姓名)"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:id="@+id/name"
                          android:maxLines="1"
                          android:singleLine="true"
                          android:textSize="18sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:id="@+id/audienceEmailDesc"
                          android:text="Employee Email(受访人的邮箱)"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:id="@+id/audienceEmail"
                          android:maxLines="1"
                          android:singleLine="true"
                          android:textSize="18sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:id="@+id/reasonDesc"
                          android:text="Reason(事由)"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:maxLines="1"
                          android:id="@+id/reason"
                          android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:background="@drawable/registe_foot_shape"
                  android:textColor="@color/colorWhite"
                  android:paddingTop="20dp"
                  android:text=""/>
    </LinearLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/back"
              android:gravity="center"
              android:text="Back\n返回"
              android:textSize="26sp"
              android:textColor="@color/colorWhite"
              android:layout_marginTop="300dp"
              android:layout_marginLeft="1000dp"
              android:background="@drawable/registe_btn"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/register"
              android:gravity="center"
              android:text="Register\n登记"
              android:textSize="26sp"
              android:textColor="@color/colorWhite"
              android:layout_marginTop="500dp"
              android:layout_marginLeft="1000dp"
              android:background="@drawable/registe_btn"/>


    <RelativeLayout android:layout_width="200dp" android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_centerInParent="true"
                    android:visibility="invisible"
                    android:background="@drawable/loading"
                    android:id="@+id/loading">
        <com.fafa.visitor.util.view.ProgressBarCircularIndeterminate android:layout_width="40dp"
                                                                 android:layout_height="40dp"
                                                                 android:layout_centerInParent="true"
                                                                 android:background="@color/primary"
                                                                 android:id="@+id/loading_cycle"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:textSize="20sp"
                  android:text="登记中..."
                  android:layout_marginTop="20dp"
                  android:layout_below="@+id/loading_cycle"/>
    </RelativeLayout>

</RelativeLayout>
