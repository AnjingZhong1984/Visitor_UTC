<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.fafa.visitor.MainActivity">
    <ImageView android:layout_width="200dp" android:layout_height="100dp"
               android:src="@drawable/logo"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:orientation="vertical"
                  android:paddingLeft="40dp">

        <TextView android:layout_width="600dp" android:layout_height="200dp"
                  android:layout_marginTop="40dp"
                  android:background="@drawable/visitor_registration_btn"
                  android:textColor="#ffffff"
                  android:gravity="center"
                  android:textSize="42sp"
                  android:layout_weight="1"
                  android:layout_marginRight="40dp"
                  android:text="Visitor Registration\n访客登记"
                  android:id="@+id/register"/>
        <TextView android:layout_width="600dp" android:layout_height="200dp"
                  android:layout_marginTop="60dp"
                  android:background="@drawable/label_printing_btn"
                  android:textColor="#ffffff"
                  android:gravity="center"
                  android:textSize="42sp"
                  android:layout_weight="1"
                  android:layout_marginRight="40dp"
                  android:text="Label Printing\n标签打印"
                  android:id="@+id/pinInput"/>
    </LinearLayout>

    <EditText android:layout_width="1dp" android:layout_height="1dp"
              android:layout_marginBottom="-10dp"
              android:layout_centerHorizontal="true"
              android:id="@+id/barCode"/>
</RelativeLayout>
